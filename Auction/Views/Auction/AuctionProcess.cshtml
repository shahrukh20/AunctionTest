@model Auction.ViewModels.AuctionVM

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="~/js/jsHelpers.js" asp-append-version="true"></script>
<script src="~/js/jsHandlers.js" asp-append-version="true"></script>
<script>
        

    
</script>

<div class="form-group div">
    <div class="form-group row">
        @*<div class="col-md-3">
                <label>Item Name</label>
            </div>*@
        <div class="col-md-3 offset-md-2">
            <input class="form-control" name="tbItemName" required placeholder="Item Name" />
            <span class="text-danger" id="err_tbItemName"></span>
        </div>
        <div class="col-md-3">
            <input class="form-control" name="tbPrice" type="number" placeholder="Price" />
            <span class="text-danger" id="err_tbPrice"></span>
        </div>
        <div class="col-md-3">
            <button type="button" name="btnAddItem" class="btn btn-info">Add Item</button>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-md-2">
            <table id="dtItems" class="table hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.AuctionItems.Rows)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="form-group  div">
    <div class="form-group row">
        @*<div class="col-md-3">
                <label>Participents/Bidder</label>
            </div>*@
        <div class="col-md-6 offset-md-2">
            <input class="form-control" name="tbParticipant" placeholder="Participant/Bidder" required />
            <span class="text-danger" id="err_tbParticipant"></span>
        </div>
        <div class="col-md-3">
            <button type="button" name="btnAddBidder" class="btn btn-info">Add Participant/Bidder</button>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-md-2">
            <table id="dtBidders" class="table hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Bidders.Rows)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="form-group div">
    <div class="form-group row">
        <div class="offset-md-2 col-md-6">
            <select class="form-control" name="ddAuctionItems">
                <option value="">Select Item</option>
            </select>
            <span class="text-danger" id="err_ddAuctionItems"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-md-2 col-md-3">
            <select class="form-control" name="ddBidders">
                <option value="">Select Bidder</option>
            </select>
            <span class="text-danger" id="err_ddBidders"></span>
        </div>
        <div class=" col-md-3">
            <input class="form-control" name="tbBid" placeholder="Bid" type="number" />
            <span class="text-danger" id="err_tbBid"></span>
        </div>
        <div class="col-md-2">
            <button type="button" name="btnAddBid" class="btn btn-info">Add</button>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-md-2">
            <table id="dtAuction" class="table hover table-striped">
                <thead>
                    <tr>
                        <th>Starting Price</th>
                        <th>Bidder</th>
                        <th>Bid</th>
                        <th>Profit</th>
                        <th>Won/Loss</th>
                        <th hidden>AuctionItemId</th>
                        <th hidden>BidderId</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="form-group div">
    <div class="form-group row">
        <div class="offset-md-2 col-md-6">
            Winner: <span id="spWinnerName"></span> and Price:  <span id="spPrice"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-md-6 col-md-6">
            <button type="button" name="btnSaveAuction" class="btn btn-info">Save Auction</button>
        </div>
    </div>
</div>


<div class="form-group">
    <div class="form-group row">

        <div class="offset-md-9 col-md-3">
            <button type="button" name="btnPriviousStep" class="btn btn-info">Privious</button>
            <button type="button" name="btnNextStep" class="btn btn-info">Next</button>
        </div>
    </div>
</div>